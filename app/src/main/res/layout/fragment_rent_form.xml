<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pinkBackground"
    tools:context=".RentFormFragment"
    android:orientation="vertical"
    android:padding="12dp">


    <TextView
        android:background="@color/iconColor"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fill the form to get the dress!"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:textStyle="italic"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="No of days: "
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>

            <Spinner
                android:id="@+id/rent_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Occasion date: "
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:inputType="date"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/rent_occ_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="01/01/2023"
                android:layout_margin="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Pick up date: "
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/rent_pickup_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="01/01/2023"
                android:layout_margin="5dp"
                android:inputType="date"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/grey" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Information"
            android:textSize="17sp"
            android:layout_margin="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/rent_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sara Ahmad"
                android:layout_margin="5dp"
                android:inputType="text"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="PhoneNo: "
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/rent_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="05xxxxxxxx"
                android:layout_margin="5dp"
                android:inputType="phone"
                />
        </LinearLayout>


        <Button
            android:id="@+id/rent_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/pink"
            android:text="Rent"/>

    </LinearLayout>




</LinearLayout>
